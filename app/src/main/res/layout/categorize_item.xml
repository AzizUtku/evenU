<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_categorize_rlt_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp">


    <LinearLayout
        android:id="@+id/item_categorize_lnr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"

        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/fab_border"
        android:padding="0dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/item_categorize_btn_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            app:backgroundTint="@android:color/white"
            app:elevation="0dp"
            app:srcCompat="@drawable/ic_favorite_border"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_categorize_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toStartOf="@id/item_categorize_lnr"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:text="Computer Science"
        android:textColor="#000"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        app:srcCompat="@drawable/ic_keyboard_arrow_right"/>

</RelativeLayout>