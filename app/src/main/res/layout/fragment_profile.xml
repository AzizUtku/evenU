<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.ProfileFragment">


    <!-- TODO: Update blank fragment layout -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_marginTop="20dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_profile_circle_48px"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/profile_text"
        android:layout_below="@id/profile_image"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="17dp"
        android:textColor="@color/colorAccentSecondary"
        />


    <GridLayout
        android:id="@+id/grÄ±dLayout"
        android:layout_marginStart="15dp"
        android:layout_below="@id/profile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_column="0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gep"
                android:layout_marginStart="23dp"
                android:layout_marginTop="25dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sett"
                android:layout_marginStart="23dp"
                android:layout_marginTop="18dp"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="1">

            <TextView
                android:id="@+id/ge_bridge"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GE Progress"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/settings_bridge"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="15dp"
                />

        </LinearLayout>

    </GridLayout>


</RelativeLayout>