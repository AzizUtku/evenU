<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_fragment_rlt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/list_fragment_lnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#FAFAFA"
        android:elevation="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_fragment_txt_departments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="Departments"
            android:textAlignment="center"
            android:textColor="#C22B1F"
            android:textSize="16sp"
            />

        <TextView
            android:id="@+id/list_fragment_txt_clubs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="Clubs"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#A2A2A2"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/list_fragment_txt_interests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto"
            android:paddingBottom="9dp"
            android:paddingTop="9dp"
            android:text="Interests"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#A2A2A2"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/list_fragment_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/list_fragment_lnr"/>

</RelativeLayout>